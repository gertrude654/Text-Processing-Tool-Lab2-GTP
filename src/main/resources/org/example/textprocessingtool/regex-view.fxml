<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.textprocessingtool.regex.RegexController"
      alignment="CENTER" spacing="10" padding="20">
    <Label text="Email Address:" />
    <TextField fx:id="emailTextField" />

    <Label text="Pattern to Search:" />
    <TextField fx:id="patternTextField" />

    <Label text="Replacement Text:" />
    <TextField fx:id="replacementTextField" />

    <Button text="Validate Email" onAction="#validateEmail" />
    <Button text="Search" onAction="#searchPattern" />
    <Button text="Match" onAction="#matchPattern" />
    <Button text="Replace" onAction="#replacePattern" />

    <TextArea fx:id="resultTextArea" editable="false" wrapText="true" prefHeight="200" />
</VBox>
